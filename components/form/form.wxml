        <view>*</view>
        <picker class="picker" mode="region" bindcancel="bindcancel" bindchange="bindRegionChange" value="{{region}}" custom-item="{{customItem}}">
          <view class="navigator-text">线报地域：{{region[0]}}，{{region[1]}}，{{region[2]}}</view>
