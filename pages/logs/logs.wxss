.log-list {
  display: flex;
  flex-direction: column;
  padding: 40rpx;
}

.log-item {
  margin: 10rpx;
}

.userinfo {
  background-color: #f8f8f8;
}

/**index.wxss**/

.userInfo_avatar {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 320rpx;
  /* background-color:red; */
  position: relative;
  /* background-image:url(../../image/index/login.png) */
}

.userInfo_avatar .background {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 0;
}

.userinfo-avatar {
  width: 171rpx;
  z-index: 3;
  overflow: hidden;
  position:relative;
  height: 171rpx;
  margin: 20rpx;
  margin-top: 40rpx;
  border-radius: 50%;
  /* background-color: rgba(255, 255, 255, 0.5); */
  /* padding-top: 5rpx; */
}

.userinfo-avatar .userinfo-avatar-img {
  width: 175rpx;
  height: 175rpx;
  border-radius: 50%;
  margin: 0 auto;
  display: block;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.userinfo-content {
  width: auto;
  padding:0 40rpx;
  height: 54rpx;
  display: block;
  z-index: 2;
  margin: 0 auto;
  background-color: rgba(26, 68, 178, 0.3);
  text-align: center;
  position: relative;
  border-radius: 50rpx;
  overflow: hidden;
}

.userinfo-content open-data {
  /* width: 184rpx; *//* height: 48rpx; *//* border-radius: 50rpx; *//* background-color: rgba(26, 68, 178, 1); *//* display: block; *//* margin: 0 auto; */
  font-size: 36rpx;
  display:inline-block;
  color: white;
  text-align: center;
  line-height: 1.6;
  /* margin-top: 2px; */
}

.userinfo-content::after {
  content: "";
  width: 95%;
  z-index: -1;
  height: 80%;
  border-radius: 50rpx;
  background-color: rgba(26, 68, 178, 1);
  position: absolute;
  left: 0;
  right: 0;
  bottom:0;
  top:0;
  margin: auto;
}

.userinfo .xinxi {
  width: 100%;
  height: 250rpx;
  border-top: 1px solid #e1e1e1;
  border-bottom: 1px solid #e1e1e1;
  display: flex;
  justify-content: space-around;
}

.userinfo .xinxi view {
  width: 50%;
  height: 100%;
  background-color: white;
  border-left: 1px solid #e1e1e1;
  text-align: center;
  /* padding:0 25rpx; */
  padding-top: 50rpx;
}

.userinfo .xinxi view .iconfont {
  /* margin-bottom:20rpx; */
  font-size: 110rpx;
  background: linear-gradient(to right, #5ba8fc, #376eff);
  -webkit-background-clip: text;
  color: transparent;
  display: block;
}

.userinfo .xinxi view .text {
  font-size: 30rpx;
  color: #333;
}
