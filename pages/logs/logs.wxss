.about-information{
  padding:0 35rpx;
  margin-top:6rpx;
}
.about-information-wrap{
  padding:32rpx 0;
  border-radius: 20rpx;
  background:#fff;
}
.about-information .navigator image{
  width:43rpx;
  height:39rpx;
  margin-right:25rpx;
}
.about-information .navigator {
  padding-left:31rpx;
  padding-right:30rpx;
  height:100rpx;
  position: relative;
  display: flex;
  align-items: center;
  
  background-color:#fff;
}

.about-information .navigator:before {
  content: " ";
  position: absolute;
  left: 30rpx;
  top: 0;
  right: 30rpx;
  height: 1px;
  border-top: 1rpx dashed #d8d8d8;
  color: #d8d8d8;
}

.about-information .navigator:first-child:before {
  display: none;
}

.about-information .navigator-text {
  flex: 1;
  font-size:32rpx;
}
.about-information .newMessage {
  text-algin:right;
  color:#999;
  font-size:24rpx;
  margin-right:25rpx;
  position:relative;
  display: flex;
  align-items: center;
}
