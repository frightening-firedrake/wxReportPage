/* pages/index/phoneReport/phoneReport.wxss */
.listWrap{

}
.listTitle{
  height:80rpx;
  line-height:80rpx;
  font-size:36rpx;
  text-align: center;
  color:#000;
  background:#f3f4f7;
}
.list{
  padding:0 24rpx;
  background:#fff;
}
.listItem{
  transition: height 0.2s;
}
.listItem2{
  padding-left:67rpx;
  transition: height 0.2s;
}
.row{
  display: flex;
  height:0;
  border-bottom:1rpx solid rgba(121,121,121,0.3);
  align-items: center;
  border-width: 0;
  overflow: hidden;
  transition: height 0.2s;
}
.sheng,.shi,.qu{
  width:60rpx;
  height:60rpx;
  text-align: center;
  line-height:60rpx;
  font-size:30rpx;
  color:#fff;
  border-radius: 50%;
  flex:0 0 auto;
  background:#84e8e2;
}
.shi{
  background:#e8d684;
}
.qu{
  background:#e89284;
}
.details{
  flex:1 1 auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-left:27rpx;
}
.name{
  color:#000;
  font-size:30rpx;
}
.phone{
  color:#666;
  font-size:30rpx;
}
.phoneCall{
  display: block;
  width: 54rpx;
	height: 54rpx;
	border: solid 1px rgba(14,5,10,0.4);
  border-radius: 50%;
  overflow: hidden;
  margin-right:18rpx;
  flex:0 0 auto;
}
.arr{
  display: block;
  width: 54rpx;
	height: 54rpx;
	border: solid 1px rgba(14,5,10,0.4);
  border-radius: 50%;
  overflow: hidden;
  transition: all 0.2s;
}
.arrBox{
  display: block;
  width: 54rpx;
	height: 54rpx;
  flex:0 0 auto;
  margin-right:10rpx;
}
.slide{
  transform: rotateZ(180deg);
}
.show{
  border-width: 1rpx;
  height:100rpx;
}