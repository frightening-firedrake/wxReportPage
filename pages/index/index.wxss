.tashow {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  z-index: 999;
}

.classitem {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  z-index: 999;
}

.classitem .zhezhao {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  z-index: 1;
}

.classitem .content {
  width: 630rpx;
  height: 970rpx;
  border-radius: 10rpx;
  background-color: #fff;
  position: absolute;
  bottom: 0;
  top: 0;
  left: 0;
  right: 0;
  margin: auto;
  z-index: 3;
}

.classitem .content .contenttext::after {
  content: "";
  width: 35rpx;
  height: 17.5rpx;
  border-radius: 35rpx 35rpx 0 0;
  transform: rotate(90deg);
  background-color: #112265;
  position: absolute;
  left: -11.75rpx;
  top: -8.75rpx;
}

.classitem .content .contenttext::before {
  content: "";
  width: 35rpx;
  height: 17.5rpx;
  border-radius: 35rpx 35rpx 0 0;
  transform: rotate(-90deg);
  background-color: #112265;
  position: absolute;
  right: -10.75rpx;
  top: -8.75rpx;
}

.classitem .content .close {
  position: relative;
}

.classitem .content .close .clear {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  right: 0;
  margin-right: -30rpx;
  top: 0;
  margin-top: -30rpx;
  z-index: 5;
}

.classitem .content .contenttext {
  width: 100%;
  height: 725rpx;
  position: relative;
}

.classitem .content image {
  width: 100%;
  height: 245rpx;
  display: block;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  border-bottom: 1px dashed #3987ea;
}

.classitem .content .contenttext .h1 {
  font-size: 36rpx;
  margin-top: 35rpx;
  color: #333;
  margin-bottom: 45rpx;
  text-align: center;
  width: 100%;
  display: block;
  font-weight: bold;
}

.classitem .content .contenttext .text {
  text-indent: 2em;
  line-height: 2;
  font-size: 30rpx;
  display: block;
  padding: 0 38rpx;
}

